        <activity
            android:name="com.gerirme.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.gerirme.activity.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>        
    </application>

</manifest>
