        <activity
            android:name=".activity.GerirmeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
   		<activity android:name="com.gerirme.activity.DashboradActivity" >
        </activity>        
        <activity
            android:name="com.gerirme.activity.RegisterActivity"
            android:label="@string/title_activity_register" >
